<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainCard"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="5dp"
    card_view:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/billTitleView"
            android:textSize="24sp"
            android:text="Title"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingRight="4dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$45.00"
            android:id="@+id/billAmountView"
            android:layout_below="@+id/billTitleView"
            android:layout_alignParentStart="true"
            android:padding="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Created By:"
            android:id="@+id/createdByLabel"
            android:layout_below="@+id/billAmountView"
            android:layout_alignParentStart="true"
            android:padding="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="bmote95@gmail.com"
            android:id="@+id/billCreatedByView"
            android:layout_alignTop="@+id/createdByLabel"
            android:layout_toEndOf="@+id/createdByLabel"
            android:padding="4dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Not Paid"
            android:id="@+id/billStatusView"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:textColor="#f60808"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
